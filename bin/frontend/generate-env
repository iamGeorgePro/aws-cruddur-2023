#!/usr/bin/env ruby

require 'erb'

template = File.read '/workspace/aws-bootcamp-cruddur-2023/erb/frontend-react-js.env.erb'
content = ERB.new(template).result(binding)
filename = "sync.env"
File.write(filename, content)

# ANSI escape sequence for blue color
blue_color = "\e[34m"
# ANSI escape sequence to reset the color
reset_color = "\e[0m"

# Print the content with blue color
puts "#{blue_color}#{content}#{reset_color}"
